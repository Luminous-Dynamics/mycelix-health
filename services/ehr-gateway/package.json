{
  "name": "@mycelix/ehr-gateway",
  "version": "0.2.0",
  "description": "EHR Integration Gateway for Mycelix-Health - FHIR R4 compatible HTTP server",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "dev:library": "tsx watch src/index.ts",
    "start": "node dist/server.js",
    "start:library": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "ehr",
    "fhir",
    "healthcare",
    "interoperability",
    "epic",
    "cerner",
    "holochain",
    "mycelix"
  ],
  "author": "Luminous Dynamics",
  "license": "MIT",
  "dependencies": {
    "@holochain/client": "^0.20.0",
    "@hono/node-server": "^1.8.0",
    "hono": "^4.0.0",
    "jose": "^5.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^9.39.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
